SRC    = $(wildcard *.c)
OBJ    = $(SRC:%.c=%.o)
BIN    = a.out

CC     = clang
CFLAGS = -Wall -Werror -Wextra -Wpedantic

.PHONY: all clean debug format

all: $(BIN)

$(BIN): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^

%.o: %.c
	$(CC) $(CFLAGS) -c $<

clean:
	rm -f $(BIN) $(OBJ)

debug: CFLAGS += -g
debug: clean all

format:
	find . -name "*.[ch]" | xargs clang-format -i -style=file
