" ===
" Vim
" ===

" ---
" General
" ---

set hidden              " Don't unload buffers
set nocompatible        " Disable vi compatibility
set encoding=utf-8      " Use UTF-8 encoding
filetype plugin on      " Load language-specific files

" Use undodir
set undofile
set undodir=~/.vim/undodir

" Store viminfo in .vim folder
set viminfo+=n~/.vim/viminfo

" No swap file
set noswapfile

" Indentation
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set smartindent

" Recognize .md as markdown
autocmd BufNewFile,BufRead *.md set filetype=markdown

" Searching
set incsearch
set nohlsearch
set ignorecase
set smartcase

" Mouse
set mouse=a

syntax on                           " Enable syntax highlighting
hi Normal guibg=NONE ctermbg=NONE   " Use terminal colors as background
set bg=dark
let g:gruvbox_contrast_dark="hard"
let g:gruvbox_sign_column="bg0"
let g:gruvbox_transparent_bg=1
let g:gruvbox_invert_selection=0
let g:gruvbox_improved_warnings=1
let g:gruvbox_guisp_fallback='fg'
colorscheme gruvbox                 " Colorscheme
set rnu                             " Use relative line numbers
set nu
set lazyredraw
set showmatch                       " Show matching bracket/quote/parenthesis when typing
set cursorline                      " Highlight current line
set laststatus=2
set noshowmode                      " Disable normal statusbar
set scrolloff=5                     " Keep cursor five lines away from edge
set autoread

" ---
" Plugins
" ---

" Install vim-plug if not already
if empty(glob('~/.vim/autoload/plug.vim'))
    silent !curl -fLo ~/.vim/autoload/plug.vim --create-dirs
        \ https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
    autocmd VimEnter * PlugInstall --sync | source $MYVIMRC
endif

call plug#begin("~/.vim/plugged")
Plug 'itchyny/lightline.vim'
Plug 'junegunn/goyo.vim'
Plug 'tpope/vim-commentary'
Plug 'neoclide/coc.nvim', {'branch': 'release'}
Plug 'junegunn/fzf.vim'
Plug 'junegunn/fzf', { 'do': { -> fzf#install() } }
Plug 'plasticboy/vim-markdown'
Plug 'shinchu/lightline-gruvbox.vim'
call plug#end()

" ---
" Mappings
" ---

let mapleader = " "
inoremap jj <Esc>

" Folds
set foldmethod=syntax
set foldnestmax=1
set fcs=fold:\ ,vert:\| " Make folding prettier
nnoremap <leader><leader> za
vnoremap <leader><leader> zf

" Splits
set splitright
set splitbelow

" Add ; to end of line
noremap <silent> <leader>; mzA;<Esc>`z

" Open terminal
noremap <silent> <leader>t :below terminal<CR><C-w>:resize 15%<CR>
noremap <silent> <leader>T :vertical below terminal<CR>

" Open Netrw
noremap <silent> <leader>E :Vex<CR>:vertical resize 40%<CR>

" Window keys
map <silent> <leader>w <C-w>
